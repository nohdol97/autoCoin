# Production Environment Configuration
# Copy this file to production.env and fill in actual values

# Exchange Configuration
BINANCE_API_KEY=your_production_api_key_here
BINANCE_API_SECRET=your_production_api_secret_here
BINANCE_TESTNET=false

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_production_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Trading Configuration
TRADING_SYMBOL=BTCUSDT
TRADING_BASE_AMOUNT=1000
TRADING_MAX_POSITIONS=1

# Risk Management
MAX_DAILY_LOSS_PERCENTAGE=5.0
MAX_POSITION_SIZE_PERCENTAGE=10.0
EMERGENCY_STOP_LOSS_PERCENTAGE=10.0

# Monitoring
HEALTH_CHECK_INTERVAL=300
METRICS_COLLECTION_INTERVAL=60
ALERT_EMAIL=your_email@example.com

# Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Logging
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE_MB=100
LOG_FILE_RETENTION_DAYS=30

# Performance
RATE_LIMIT_BUFFER_PERCENTAGE=20
CONNECTION_TIMEOUT_SECONDS=30
REQUEST_RETRY_COUNT=3